<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <include
        android:id="@+id/inc_toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/inc_toolbar"
        android:layout_marginLeft="@dimen/m_left_right"
        android:layout_marginRight="@dimen/m_left_right"
        android:layout_marginTop="@dimen/space20"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:text="or"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/textGray" />
        <EditText
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            style="@style/EditText"/>
        <EditText
            android:id="@+id/txtPassoword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:inputType="textPassword"
            android:hint="Password"
            style="@style/EditText"/>
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:text="login"
            style="@style/ButtonOrange"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space20"
            android:text="olvidaste la contraceÃ±a?"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textGray" />
    </LinearLayout>
</RelativeLayout>
